@using OsosOracle.Entities.ComplexType.SYSKULLANICIComplexTypes
@model SYSKULLANICIDetay
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/favicon2.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="panel-body">
                <p class="text-center pv">YONCA</p>
                @*  <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">*@
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.KULLANICIAD, new { @class = "form-control", placeholder = "User Name", required = "required", id = "exampleInputEmail1" })
                    @Html.ValidationMessageFor(m => m.KULLANICIAD)
                </div>
                <div class="form-group has-feedback">

                    @Html.PasswordFor(m => m.SIFRE, new { @class = "form-control", placeholder = "Password", required = "required" })
                    @Html.ValidationMessageFor(m => m.SIFRE)
                </div>
                <div class="clearfix">
                    <div class="checkbox c-checkbox pull-left mt0">
                        <label>
                            <input type="checkbox" value="" name="remember" />
                            <span class="fa fa-check"></span>Remember Me
                        </label>
                    </div>
                    <div class="pull-right">
                        <a href="@Url.Action("Recover", "Home")" class="text-muted">Forgot your password?</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>

                <div style="list-style-type:none">
                    @Html.ValidationSummary(true)
                </div>
                @*</form>*@
            </div>
        }
    </div>
    <!-- END panel-->
</div>