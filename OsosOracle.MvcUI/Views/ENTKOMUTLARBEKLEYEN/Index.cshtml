
@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Infrastructure
@model OsosOracle.MvcUI.Models.ENTKOMUTLARBEKLEYENModels.ENTKOMUTLARBEKLEYENIndexModel

@section panelHeading{
    @Html.ButtonLink(_T("Yeni Komut").ToString(), "Ekle", "btn btn-xs btn-success modalizer", "fa-plus")
}

@using (Html.BeginPortlet("Bekleyen Komut Arama", "Detaylı Arama", "fa fa-search"))
{
<form id="frmAra" class="form-bordered">
    <div class="form-group row">
        <div class="col-md-6">
            @Html.TextBoxFor(t => t.ENTKOMUTLARBEKLEYENAra.KONSSERINO, new { @class = "form-control int", placeholder = _T("Kons Seri No") })
        </div>
        @*<div class="col-md-6">
            @Html.TextBoxFor(t => t.ENTKREDIKOMUTTAKIPAra.SAYACSERINO, new { @class = "form-control int", placeholder = _T("Sayaç Seri No") })
        </div>*@
    </div>
    <div class="form-actions">
        <button type="button" class="btn btn-primary btn-sm" id="btnAra"><i class="fa fa-search"></i> @_T("Bul")</button>
    </div>
</form>
}


<table id="tblENTKOMUTLARBEKLEYEN" class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>@_T("KonsSeriNo")</th>
            <th>@_T("Komut Kodu")</th>
            <th>@_T("Komut")</th>
            <th>@_T("Bağlantı Deneme Sayısı")</th>
            <th>@_T("Açıklama")</th>
            <th>@_T("İşlem Tarih")</th>

            <th style="width: 100px">@_T("İşlemler")</th>
        </tr>
    </thead>
</table>
@section script{
    <script type="text/javascript">
	$(document).ready(function () {
		AraFiltered();
		$("#btnAra").click(function(e) {
				e.preventDefault();
				AraFiltered();
		});
	});

	function AraFiltered() {
		$('#tblENTKOMUTLARBEKLEYEN').dataTable({
			'language': GetSession(baseUrl),
			'processing': true,
			'serverSide': true,
			'destroy': true,
			'columns': [
                {'data': "KONSSERINO" },
                {'data': "KOMUTKODU" },
                {'data': "KOMUT" },
				{'data': "BAGLANTIDENEMESAYISI"},
				{'data': "ACIKLAMA"},
				
				{'data': "ISLEMTARIH"},

				{'data': "Islemler", sortable: false}
			],
			'ajax': {
				'type': 'POST',
				'data': $("#frmAra").serializeObject(),
				'url': "@Url.Action("DataTablesList", "ENTKOMUTLARBEKLEYEN")",
				'error': function(xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
				'complete': function() { }
		   }

		});
	 }

    </script>
}