
@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Infrastructure
@model OsosOracle.MvcUI.Models.SYSKULLANICIDETAYModels.SYSKULLANICIDETAYIndexModel

@section panelHeading{
    @Html.ButtonLink(_T("Yeni SYSKULLANICIDETAY").ToString(), "Ekle", "btn btn-xs btn-success modalizer", "fa-plus")
}

@using (Html.BeginPortlet("SYSKULLANICIDETAY Arama", "Detaylı Arama", "fa fa-search"))
{
    <form id="frmAra" class="form-bordered">

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICIDETAYAra.EPOSTA, new { @class = "form-control int", placeholder = _T("EPOSTA") })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICIDETAYAra.GSM, new { @class = "form-control int", placeholder = _T("GSM") })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICIDETAYAra.KULLANICIKAYITNO, new { @class = "form-control int", placeholder = _T("KULLANICIKAYITNO") })
        </div>



        <div class="form-actions">
            <button type="button" class="btn btn-primary btn-sm" id="btnAra"><i class="fa fa-search"></i> @_T("Bul")</button>
        </div>
    </form>
}


<table id="tblSYSKULLANICIDETAY" class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th style="width: 30px">@_T("Id")</th>
            <th>@_T("EPOSTA")</th>
            <th>@_T("GSM")</th>
            <th>@_T("KULLANICIKAYITNO")</th>

            <th style="width: 100px">@_T("İşlemler")</th>
        </tr>
    </thead>
</table>
@section script{
    <script type="text/javascript">
	$(document).ready(function () {
		AraFiltered();
		$("#btnAra").click(function(e) {
				e.preventDefault();
				AraFiltered();
		});
	});

	function AraFiltered() {
		$('#tblSYSKULLANICIDETAY').dataTable({
			'language': dataTableLanguage,
			'processing': true,
			'serverSide': true,
			'destroy': true,
			'columns': [
				{'data': "KAYITNO"},
				{'data': "EPOSTA"},
				{'data': "GSM"},
				{'data': "KULLANICIKAYITNO"},

				{'data': "Islemler", sortable: false}
			],
			'ajax': {
				'type': 'POST',
				'data': $("#frmAra").serializeObject(),
				'url': "@Url.Action("DataTablesList", "SYSKULLANICIDETAY")",
				'error': function(xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
				'complete': function() { }
		   }

		});
	 }

    </script>
}