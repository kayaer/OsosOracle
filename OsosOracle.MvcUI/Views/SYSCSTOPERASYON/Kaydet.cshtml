@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Infrastructure
@model OsosOracle.MvcUI.Models.SYSCSTOPERASYONModels.SYSCSTOPERASYONKaydetModel

@section panelHeading
{

}

<div class="ajaxForm">

    @using (Html.BeginForm("Kaydet", "SYSCSTOPERASYON", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.SYSCSTOPERASYON.KAYITNO)
        @Html.HiddenFor(t => t.SYSCSTOPERASYON.VERSIYON)
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSCSTOPERASYON.AD, new { @class = "form-control int", placeholder = _T("Ad") })
            @Html.ValidationMessageFor(t => t.SYSCSTOPERASYON.AD)

        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSCSTOPERASYON.ACIKLAMA, new { @class = "form-control int", placeholder = _T("Açıklama") })
            @Html.ValidationMessageFor(t => t.SYSCSTOPERASYON.ACIKLAMA)

        </div>
        <div class="form-group">
            @Html.AutoComplete(t => t.SYSCSTOPERASYON.MENUKAYITNO, Enums.AutocompleteFuction.MenuGetir, Enums.AutoCompleteType.List, "Menü")
            @Html.ValidationMessageFor(t => t.SYSCSTOPERASYON.MENUKAYITNO)

        </div>



        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @_T("Kaydet")</button>
            @Html.ButtonLink(_T("Vazgeç").ToString(), "Index", "btn btn-xs btn-danger cancel", "fa-remove")
        </div>
    }
</div>

@section script
{
    <script type="text/javascript">
        $(document).ready(function () {
            //js kodunuzu buraya yazın
        });

    </script>
}
