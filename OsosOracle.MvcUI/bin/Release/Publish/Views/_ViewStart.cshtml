@{

    var layout = Request.QueryString["layout"];

    if (String.IsNullOrEmpty(layout))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if (layout == "modal")
    {
        Layout = "~/Views/Shared/_PopUp.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


}