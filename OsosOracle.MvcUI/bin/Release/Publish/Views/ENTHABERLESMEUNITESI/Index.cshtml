@using OsosOracle.MvcUI.Infrastructure
@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.Entities.ComplexType.CSTHUMODELComplexTypes
@model OsosOracle.MvcUI.Models.ENTHABERLESMEUNITESIModels.ENTHABERLESMEUNITESIIndexModel

@section panelHeading{
    @Html.ButtonLink(_T("Yeni Haberleşme Ünitesi").ToString(), "Ekle", "btn btn-xs btn-success modalizer", "fa-plus")
}

@using (Html.BeginPortlet("Haberleşme Ünitesi Arama", "Detaylı Arama", "fa fa-search"))
{
    <form id="frmAra" class="form-bordered">

        <div class="form-group row">
            <div class="col-md-4">
                @Html.AutoComplete(t => t.ENTHABERLESMEUNITESIAra.MARKAKAYITNO, Enums.AutocompleteFuction.ModemMarkaGetir, Enums.AutoCompleteType.List, _T("Modem Marka").ToString(), connectedWith: Html.NameFor(t => t.ENTHABERLESMEUNITESIAra.MODELKAYITNO).ToString())
            </div>
            <div class="col-md-4">
                @Html.AutoComplete(t => t.ENTHABERLESMEUNITESIAra.MODELKAYITNO, Enums.AutocompleteFuction.ModemModelGetir, Enums.AutoCompleteType.List, _T("Modem Model").ToString())
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(t => t.ENTHABERLESMEUNITESIAra.SERINO, new { @class = "form-control int", placeholder = _T("Seri No") })
            </div>
        </div>


        <div class="form-actions">
            <button type="button" class="btn btn-primary btn-sm" id="btnAra"><i class="fa fa-search"></i> @_T("Bul")</button>
        </div>
    </form>
}


<table id="tblENTHABERLESMEUNITESI" class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>@_T("Marka")</th>
            <th>@_T("Model")</th>
            <th>@_T("Seri No")</th>
            <th>@_T("Sim")</th>
            <th>@_T("Ip")</th>
            <th>@_T("Açıklama")</th>
            <th>@_T("Kurum")</th>

            <th style="width: 100px">@_T("İşlemler")</th>
        </tr>
    </thead>
</table>
@section script{
    <script type="text/javascript">
	$(document).ready(function () {
		AraFiltered();
		$("#btnAra").click(function(e) {
				e.preventDefault();
				AraFiltered();
		});
	});

	function AraFiltered() {
		$('#tblENTHABERLESMEUNITESI').dataTable({
			'language': dataTableLanguage,
			'processing': true,
			'serverSide': true,
			'destroy': true,
            'columns': [
                {'data': "MARKA" },
                {'data': "MODEL" },
				{'data': "SERINO"},
				{'data': "SIMTELNO"},
				{'data': "IP"},
				{'data': "ACIKLAMA"},
                {'data': "Kurum"},
				{'data': "Islemler", sortable: false}
			],
			'ajax': {
				'type': 'POST',
				'data': $("#frmAra").serializeObject(),
				'url': "@Url.Action("DataTablesList", "ENTHABERLESMEUNITESI")",
				'error': function(xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
				'complete': function() { }
		   }

		});
	 }

    </script>
}