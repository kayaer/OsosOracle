@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Resources
@using OsosOracle.MvcUI.Models.ENTABONESAYACModels
@model PartialModel


<div class="portlet box purple-plum">
    <form id="frmSuPartial">
        @Html.HiddenFor(t => t.AboneKayitNo)
        @Html.HiddenFor(t => t.GuncelleBtnVisible)
        @Html.HiddenFor(t => t.SilBtnVisible)
        @Html.HiddenFor(t => t.ReturnUrl)
    </form>


    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-bank"></i><span class="caption-subject">Satış Bilgileri</span> <span class="caption-helper"> </span>
        </div>
        <div class="tools">
            <a href="#" class="collapse" data-original-title="Aç/Kapa" title=""> </a>
        </div>
        <div class="actions">

            @Html.ButtonLink(_T("Yeni Kayıt").ToString(), "Ekle", "btn modalizer", "fa fa-pencil", new { AboneKayitNo = Model.AboneKayitNo, Tip = 1, returnUrl = Model.ReturnUrl }, null, "Satis")
        </div>
    </div>
    <div class="portlet-body" style="display: block;">
        <table id="tblSatislistesi" class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>@Dil.AboneNo</th>
                    <th>@Dil.SayacSeriNo</th>
                    <th>@Dil.Kredi</th>
                    <th>@Dil.SatisTarih</th>
                    <th style="width: 100px">@Dil.Islem</th>
                </tr>
            </thead>
        </table>
    </div>

</div>


<script type="text/javascript">
        $(document).ready(function () {

            $('#tblSatislistesi').dataTable({
                'language': dataTableLanguage,
                'processing': true,
                'serverSide': true,
                'destroy': true,
                'columns': [
                    { 'data': "AboneNo" },
                    { 'data': "SayacSeriNo" },
                    { 'data': "KREDI" },
                    { 'data': "OLUSTURMATARIH" },
                    { 'data': "Islemler", sortable: false }
                ],
                'ajax': {
                    'type': 'POST',
                    'data': $("#frmAra").serializeObject(),
                    'url': "@Url.Action("DataTablesList", "Satis")",
                    'error': function (xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
                    'complete': function () { }
                }

            });
        });

</script>






