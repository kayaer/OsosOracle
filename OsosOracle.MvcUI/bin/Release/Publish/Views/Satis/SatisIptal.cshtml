    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">@Dil.SatisBilgileri</div>
                <div class="panel-body">
                    <table id="tblSatislistesi" class="table table-striped table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>@Dil.AboneNo</th>
                                <th>@Dil.SayacSeriNo</th>
                                <th>@Dil.Kredi</th>
                                <th>@Dil.SatisTarih</th>

                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>








@section script
{
    <script type="text/javascript">

        $(document).ready(function () {
            //var namespace='@ConfigurationManager.AppSettings["KartNamespace"]';
               var satisKaydetModel=@Html.Raw(Json.Encode(Model));


            $("#btnKartOku").click(function (e) {

                var kart = AboneOku();
                if (kart !== false) {

                    $.ajax({
                        url: '/Satis/KartOkunanSatisIptal',
                    method: "POST",
                    async: false,
                        data: { hamdata: kart },
                        success: function (jqx) {
                            satisKaydetModel.KalorimetreOkunan = jqx;
                            //if (jqx.Ako == "*") {
                            //    ajaxMesajGoster('Satış iptal yapılamaz. Sayaça yükleme yapılmış');
                            //    return;
                            //}
                            //$("#txtAboneNo").val(satisKaydetModel.ElkKartOkunan.AboneNo);
                            $("#txtSayacSeriNo").val(jqx.SayacSeriNo);
                            $("#txtAnaKredi").val(jqx.Kredi);
                            $("#txtYedekKredi").val(jqx.YedekKredi);
                            //$("#txtTarife").val(jqx.TarifeAdi);
                            

                            AraFiltered();
                        }
                    });
                }

            });



            $("#btnKrediYukle").click(function (e) {

                KrediYukle(satisKaydetModel);
                var satisUrl = "@Url.Action("SatisKaydetKalorimetre", "Satis")";


                $.ajax({
                    type: "POST",
                    data: JSON.stringify(satisKaydetModel),
                    url: satisUrl,
                    contentType: "application/json"
                }).done(function (res) {

                    var url = '@Url.Action("MakbuzIndir","Satis")' + '?filename=' + res.fileName;
                    window.location.href = url;
                    satisKaydetModel = null;
                    GorunumAyarla();
                });
            });





            function AboneOku() {

                var result = false;
                try {
                    //var kalorimetre = new ActiveXObject(namespace);
                    var kartTip = kalorimetre.KartTipi();
                    if (kartTip === "Abone Kartı" || kartTip === "Subscriber Card") {
                        result = kalorimetre.AboneOku();
                    } else if (kartTip === "Bos Kart") {
                        ajaxMesajGoster('Kart Boş');
                    } else {
                        ajaxMesajGoster('Kart Bilgisi Alınamıyor');
                    }
                    return result;
                } catch (e) {

                    ajaxMesajGoster(e);

                }


            }



            function KrediYukle(satisKaydetModel) {
                var kalorimetre = new ActiveXObject(namespace);
                try {

                    var kartTip = kalorimetre.KartTipi();
                    if (kartTip === "Abone Kartı" || kartTip === "Subscriber Card") {
                        KrediYukleKart(satisKaydetModel);
                    } else if (kartTip === "Bos Kart") {
                        ajaxMesajGoster('Kart Boş');
                    } else {
                        ajaxMesajGoster('Kart Bilgisi Alınamıyor');
                    }
                } catch (e) {
                    ajaxMesajGoster(e);
                }
            }

            function KrediYukleKart(satisKaydetModel) {
                var kalorimetre = new ActiveXObject(namespace);
                var result = false;
                try {
                    result = kalorimetre.KalorimetreYaz(satisKaydetModel.KalorimetreYazilacak.devno,
                        satisKaydetModel.KalorimetreYazilacak.anakr,
                        satisKaydetModel.KalorimetreYazilacak.yedekkr,
                        satisKaydetModel.KalorimetreYazilacak.Bayram1Gunn,
                        satisKaydetModel.KalorimetreYazilacak.Bayram1Ayy,
                        satisKaydetModel.KalorimetreYazilacak.Bayram1Suree,
                        satisKaydetModel.KalorimetreYazilacak.Bayram2Gunn,
                        satisKaydetModel.KalorimetreYazilacak.Bayram2Ayy,
                        satisKaydetModel.KalorimetreYazilacak.Bayram2Suree
                    );
                    if (result == "1") {
                        ajaxMesajGoster('İşlem Başarılı');
                    } else {
                        ajaxMesajGoster('İşlem Başarısız');
                    }
                } catch (e) {
                    ajaxMesajGoster(e);
                }
            }

            function GorunumAyarla() {
                //$("#txtAboneNo").val('');
                $("#txtSayacSeriNo").val('');
                $("#txtAnaKredi").val('');
                $("#txtYedekKredi").val('');
                $("#txtTutar").val('');
                $("#txtKredi").val('');
                $("#txtToplamKredi").val('');
            }

            function AraFiltered() {

                var data = {
                    "kayitno": null,
                    "kayitnOlar": null,
                    "abonekayitno": null,
                    "sayackayitno": null,
                    "faturano": null,
                    "odeme": null,
                    "versiyon": null,
                    "iptal": null,
                    "kredi": null,
                    "yedekkredi": null,
                    "SayacSeriNo": $("#txtSayacSeriNo").val(),
                };

            $('#tblSatislistesi').dataTable({
                'language': dataTableLanguage,
                'processing': true,
                'serverSide': true,
                'destroy': true,
                'columns': [
                    { 'data': "AboneNo" },
                    { 'data': "SayacSeriNo" },
                    { 'data': "KREDI" },
                    { 'data': "OLUSTURMATARIH" }
                ],
                'ajax': {
                    'type': 'POST',
                    'data':  data,// $("#frmAra").serializeObject(),
                    'url': "@Url.Action("SonSatis", "Satis")",
                    'error': function (xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
                    'complete': function () { }
                }

            });

        }

        });

    </script>


}
