@using System.Configuration

<button id="btnKartOku" type="button" class="btn btn-danger btn-sm">KartOku </button>

<div class="form-horizontal">
    <div class="form-group form-group-sm">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Abone Bilgileri</div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" placeholder="Tarife Adı" id="txtTarife" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" placeholder="Abone No" id="txtAboneNo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" placeholder="Sayaç Seri No" id="txtSayacSeriNo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" placeholder="Ana Kredi" id="txtAnaKredi" />
                            </div>
                        </div><div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" placeholder="Yedek Kredi" id="txtYedekKredi" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">Satış</div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="col-sm-6">
                                    @* @Html.TextBoxFor(t => t.GirilenTutar, new { @class = "form-control", placeholder = _T("Tutar"), Id = "txtTutar" })*@
                                    <input type="text" class="form-control" placeholder="Ana Kredi" id="txtAnaKredi" />
                                </div>
                                <div class="col-sm-6">
                                    @* @Html.TextBoxFor(t => t.ElkKartYuklenecek.AnaKredi, new { @class = "form-control", placeholder = _T("Kredi") })*@
                                    <input type="text" class="form-control" placeholder="Yüklenecek Fark" id="txtFark" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">

                        <button type="submit" class="btn btn-danger btn-sm" name="submitButton" id="btnKrediYukle">
                            Kredi Yükle
                        </button>
                    </div>
                </div>

            </div>

            <div class="clearfix">&nbsp;</div>


        </div>

    </div>
</div>




@section script
{
    <script type="text/javascript">

        $(document).ready(function () {
            var namespace='@ConfigurationManager.AppSettings["KartNamespace"]';
               var satisKaydetModel=@Html.Raw(Json.Encode(Model));


            $("#btnKartOku").click(function (e) {

                var kart = AboneOku();
                if (kart !== false) {

                    $.ajax({
                        url: '/Satis/KartOkunanSogukSu',
                    method: "POST",
                    async: false,
                        data: { hamdata: kart },
                        success: function (jqx) {
                            //satisKaydetModel.SogukSuOkunan = jqx;
                            $("#txtSayacSeriNo").val(jqx.SayacSeriNo);
                            $("#txtAnaKredi").val(jqx.Kredi);
                            $("#txtYedekKredi").val(jqx.YedekKredi);
                            $("#txtTarife").val(jqx.TarifeAdi);
                        }
                    });
                }

            });


            $("#btnKrediYukle").click(function (e) {

                KrediYukle(satisKaydetModel);
               
            });





            function AboneOku() {

                var result = false;
                try {
                    var sogukSu = new ActiveXObject(namespace);
                    var kartTip = sogukSu.KartTipi();
                    if (kartTip === "Abone Kartı" || kartTip === "Subscriber Card") {
                        result = sogukSu.AboneOku();
                    } else if (kartTip === "Bos Kart") {
                        ajaxMesajGoster('Kart Boş');
                    } else {
                        ajaxMesajGoster('Kart Bilgisi Alınamıyor');
                    }
                    return result;
                } catch (e) {

                    ajaxMesajGoster(e);

                }


            }



            function KrediYukle(satisKaydetModel) {
                var sogukSu = new ActiveXObject(namespace);
                try {

                    var kartTip = sogukSu.KartTipi();
                    if (kartTip === "Abone Kartı" || kartTip === "Subscriber Card") {
                        KrediYukleKart(satisKaydetModel);
                    } else if (kartTip === "Bos Kart") {
                        ajaxMesajGoster('Kart Boş');
                    } else {
                        ajaxMesajGoster('Kart Bilgisi Alınamıyor');
                    }
                } catch (e) {
                    ajaxMesajGoster(e);
                }
            }

            function KrediYukleKart(satisKaydetModel) {
                var sogukSu = new ActiveXObject("SmartCard.KartIslem");
                var result = false;
                try {
                    result = sogukSu.AboneYazSu(satisKaydetModel.SogukSuYazilacak.SayacSeriNo,
                        satisKaydetModel.SogukSuYazilacak.YuklenecekM3,
                        satisKaydetModel.SogukSuYazilacak.YedekKredi,
                        satisKaydetModel.SogukSuYazilacak.Limit1,
                        satisKaydetModel.SogukSuYazilacak.Limit2,
                        satisKaydetModel.SogukSuYazilacak.Fiyat1,
                        satisKaydetModel.SogukSuYazilacak.Fiyat2,
                        satisKaydetModel.SogukSuYazilacak.Fiyat3
                    );
                    if (result == "1") {
                        ajaxMesajGoster('İşlem Başarılı');
                    } else {
                        ajaxMesajGoster('İşlem Başarısız');
                    }
                } catch (e) {
                    ajaxMesajGoster(e);
                }
            }

            function GorunumAyarla() {
                //$("#txtAboneNo").val('');
                $("#txtSayacSeriNo").val('');
                $("#txtAnaKredi").val('');
                $("#txtYedekKredi").val('');
                $("#txtTutar").val('');
                $("#txtKredi").val('');
            }

        });

    </script>


}