
@using OsosOracle.MvcUI.Infrastructure
@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Resources
@model OsosOracle.Entities.ComplexType.ENTABONEComplexTypes.YesilVadiAboneIslemleri

@section panelHeading
{

}

<div class="ajaxForm">

    @using (Html.BeginForm("KaydetAvm", "Abone", FormMethod.Post))
    {

        using (Html.BeginRibbon("Abone Bilgileri", ribbonColor: RibbonHelper.RibbonColor.Success))
        {
            <div class="form-group row ">
                <div class="col-md-4">
                    @Html.TextBoxFor(t => t.ENTABONE.AD, new { @class = "form-control", placeholder = _T("Abone Adı") })
                    @Html.ValidationMessageFor(t => t.ENTABONE.AD)
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(t => t.ENTABONE.SOYAD, new { @class = "form-control", placeholder = _T("Abone Soyadı") })
                    @Html.ValidationMessageFor(t => t.ENTABONE.SOYAD)
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(t => t.ENTABONE.ABONENO, new { @class = "form-control", placeholder = _T("Abone No") })
                    @Html.ValidationMessageFor(t => t.ENTABONE.ABONENO)
                </div>


            </div>


        }

        using (Html.BeginRibbon("Elektrik Sayaç Bilgileri", ribbonColor: RibbonHelper.RibbonColor.Info))
        {
            <div class="form-group row">
               
                <div class="col-md-4">
                    @Html.AutoComplete(t => t.ElektrikSayac.SAYACKAYITNO, Enums.AutocompleteFuction.SayacGetir, Enums.AutoCompleteType.List, Dil.Sayac)
                    @Html.ValidationMessageFor(t=>t.ElektrikSayac.KAYITNO)

                </div>
                <div class="col-md-4">
                    @Html.AutoComplete(t => t.ElektrikSayac.TARIFEKAYITNO, Enums.AutocompleteFuction.ElektrikTarifeGetir, Enums.AutoCompleteType.List, _T("Tarife").ToString())
                    @Html.ValidationMessageFor(t => t.ElektrikSayac.TARIFEKAYITNO)
                </div>
            </div>


        }

        using (Html.BeginRibbon("Su Sayaç Bilgileri", ribbonColor: RibbonHelper.RibbonColor.Default))
        {
            <div class="form-group row">
               
                <div class="col-md-4">
                    @Html.AutoComplete(t => t.SuSayac.SAYACKAYITNO, Enums.AutocompleteFuction.SayacGetir, Enums.AutoCompleteType.List, _T("Sayaç").ToString())
                    @Html.ValidationMessageFor(t => t.SuSayac.SAYACKAYITNO)
                </div>


                <div class="col-md-4">
                    @Html.AutoComplete(t => t.SuSayac.TARIFEKAYITNO, Enums.AutocompleteFuction.SuTarifeGetir, Enums.AutoCompleteType.List, _T("Tarife").ToString())
                    @Html.ValidationMessageFor(t => t.SuSayac.TARIFEKAYITNO)
                </div>



            </div>


        }


        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @_T("Kaydet")</button>
            @Html.ButtonLink(_T("Vazgeç").ToString(), "Index", "btn btn-xs btn-danger cancel", "fa-remove")
        </div>
    }
</div>

@section script
{
    <script type="text/javascript">
        $(document).ready(function () {
            //js kodunuzu buraya yazın
        });

    </script>
}
