
@using OsosOracle.MvcUI.Infrastructure
@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Resources
@using OsosOracle.Framework.Entities
@using OsosOracle.Entities.Enums
@model OsosOracle.Entities.ComplexType.ENTABONEComplexTypes.AboneIslemleri

@section panelHeading
{

}

<div class="ajaxForm">

    @using (Html.BeginForm("Kaydet", "Abone", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.ENTABONE.KAYITNO)
        @Html.HiddenFor(t => t.ENTABONESAYAC.KAYITNO)
        @Html.HiddenFor(t => t.ENTABONESAYAC.ABONEKAYITNO)
        @Html.HiddenFor(t => t.ENTABONE.VERSIYON)
        @Html.HiddenFor(t => t.ENTABONE.OLUSTURAN)
        @Html.HiddenFor(t => t.ENTABONESAYAC.OLUSTURAN)
        @Html.ValidationSummary(true)

        using (Html.BeginRibbon(Dil.AboneBilgileri, ribbonColor: RibbonHelper.RibbonColor.Success))
        {
            <div class="form-group row">
                <div class="col-md-6">
                    @Html.TextBoxFor(t => t.ENTABONE.AD, new { @class = "form-control", placeholder = Dil.Ad })
                    @Html.ValidationMessageFor(t => t.ENTABONE.AD)
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(t => t.ENTABONE.SOYAD, new { @class = "form-control", placeholder = Dil.Soyad })
                    @Html.ValidationMessageFor(t => t.ENTABONE.SOYAD)
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    @Html.TextBoxFor(t => t.ENTABONE.ABONENO, new { @class = "form-control", placeholder = Dil.AboneNo })
                    @Html.ValidationMessageFor(t => t.ENTABONE.ABONENO)
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(t => t.ENTABONE.KimlikNo, new { @class = "form-control", placeholder = Dil.KimlikNo })
                    @Html.ValidationMessageFor(t => t.ENTABONE.KimlikNo)
                </div>

            </div>
            {
                var AktifKullanici = (AktifKullanici)Session["User"];
                if (AktifKullanici.KurumKayitNo == enumKurum.YesilVadi.GetHashCode())
                {
                    <div class="form-group row">
                        <div class="col-md-4">
                            @Html.TextBoxFor(t => t.ENTABONE.Daire, new { @class = "form-control", placeholder = "Daire" })
                            @Html.ValidationMessageFor(t => t.ENTABONE.Daire)
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(t => t.ENTABONE.Blok, new { @class = "form-control", placeholder = "Blok" })
                            @Html.ValidationMessageFor(t => t.ENTABONE.Blok)
                        </div>
                         <div class="col-md-4">
                            @Html.DateInput(t => t.ENTABONE.SonSatisTarih, new { placeholder = Dil.SonSatisTarihi })
                            @Html.ValidationMessageFor(t => t.ENTABONE.SonSatisTarih)
                        </div>
                    </div>
                }
            }

        }


        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @Dil.Kaydet</button>
            @Html.ButtonLink(Dil.Vazgec, "Index", "btn btn-xs btn-danger cancel", "fa-remove")
        </div>
    }
</div>

@section script
{
    <script type="text/javascript">
        $(document).ready(function () {
            //js kodunuzu buraya yazın
        });

    </script>
}
