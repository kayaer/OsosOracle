@using OsosOracle.MvcUI.Models.SYSGOREVModels
@using OsosOracle.MvcUI.Resources
@model SYSGOREVKaydetModel

@{
    ViewBag.Title = "GÃ¶rev Ekle";
}


@using (Html.BeginForm("Kaydet", "SYSGOREV", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(t => t.SYSGOREV.KAYITNO)
    @Html.HiddenFor(t => t.SYSGOREV.VERSIYON)
    @Html.HiddenFor(t=>t.SYSGOREV.OLUSTURAN)
    @Html.HiddenFor(t=>t.SYSGOREV.GUNCELLEYEN)
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">@Dil.OperasyonListesi</div>
                    <div class="panel-body">
                        <table id="tbloperasyonlistesi" class="table table-striped table-bordered table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th>@Dil.Ad</th>
                                    <th>@Dil.Aciklama</th>
                                    <th>@Dil.Sec</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OperasyonListesi != null)
                                {
                                    for (var i = 0; i < Model.OperasyonListesi.Count; i++)
                                    {
                                        @Html.HiddenFor(m => @Model.OperasyonListesi[i].KayitNo)
                                        @Html.HiddenFor(m => @Model.OperasyonListesi[i].Ad)
                                        <tr>
                                            <td>@Model.OperasyonListesi[i].Ad</td>
                                            <td>@Model.OperasyonListesi[i].Aciklama</td>
                                            <td>@Html.CheckBoxFor(modelItem => Model.OperasyonListesi[i].Secildi)</td>
                                        </tr>
                                    }
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <!-- START panel-->
                <div class="panel panel-default">
                    <div class="panel-heading">@Dil.YeniGorevEkle</div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.SYSGOREV.AD, new { @class = "form-control", placeholder = Dil.GorevAdi })
                            </div>
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.SYSGOREV.ACIKLAMA, new { @class = "form-control", placeholder = Dil.Aciklama })
                            </div>

                            <div class="pull-right">
                                <button type="submit" class="btn btn-sm btn-primary">@Dil.Ekle</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>

    </div>

}

