@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Infrastructure
@using OsosOracle.MvcUI.Resources
@using OsosOracle.Framework.HtmlHelpers
@model OsosOracle.MvcUI.Models.SYSKULLANICIModels.SYSKULLANICIKaydetModel

@section panelHeading
{

}

<div class="ajaxForm">

    @using (Html.BeginForm("Kaydet", "SYSKULLANICI", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.SYSKULLANICI.KAYITNO)
        @Html.HiddenFor(t => t.SYSKULLANICI.VERSIYON)
        @Html.HiddenFor(t => t.SYSKULLANICI.OLUSTURAN)
        @Html.HiddenFor(t => t.SYSKULLANICI.GUNCELLEYEN)
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICI.KULLANICIAD, new { @class = "form-control", placeholder = Dil.KullaniciAdi })
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.KULLANICIAD)

        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICI.SIFRE, new { @class = "form-control", placeholder = Dil.Sifre })
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.SIFRE)

        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICI.AD, new { @class = "form-control", placeholder = Dil.Ad })
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.AD)

        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.SYSKULLANICI.SOYAD, new { @class = "form-control", placeholder = Dil.Soyad })
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.SOYAD)

        </div>
        <div class="form-group">
            @Html.AutoComplete(t => t.SYSKULLANICI.DIL, Enums.AutocompleteFuction.DilGetir, Enums.AutoCompleteType.List, Dil.Dili)
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.KURUMKAYITNO)
        </div>
        <div class="form-group">
            @Html.AutoComplete(t => t.SYSKULLANICI.KURUMKAYITNO, Enums.AutocompleteFuction.KurumGetir, Enums.AutoCompleteType.List, Dil.Kurum)
            @Html.ValidationMessageFor(t => t.SYSKULLANICI.KURUMKAYITNO)
        </div>



        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @Dil.Kaydet</button>
            @Html.ButtonLink(Dil.Vazgec, "Index", "btn btn-xs btn-danger cancel", "fa-remove")
        </div>
    }
</div>

@section script
{
    <script type="text/javascript">
        $(document).ready(function () {
            //js kodunuzu buraya yazÄ±n
        });

    </script>
}
