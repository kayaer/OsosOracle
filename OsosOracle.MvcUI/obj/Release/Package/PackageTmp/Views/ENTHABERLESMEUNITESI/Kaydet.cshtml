@using OsosOracle.Framework.HtmlHelpers
@using OsosOracle.MvcUI.Infrastructure
@using OsosOracle.MvcUI.Resources
@model OsosOracle.MvcUI.Models.ENTHABERLESMEUNITESIModels.ENTHABERLESMEUNITESIKaydetModel

@section panelHeading
{

}

<div class="ajaxForm">

    @using (Html.BeginForm("Kaydet", "ENTHABERLESMEUNITESI", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(t => t.ENTHABERLESMEUNITESI.KAYITNO)
        @Html.HiddenFor(t => t.ENTHABERLESMEUNITESI.VERSIYON)
        @Html.HiddenFor(t=>t.ENTHABERLESMEUNITESI.OLUSTURAN)
        @Html.ValidationSummary(true)



        <div class="form-group row">
            <div class="col-md-4">
                @Html.AutoComplete(t => t.ENTHABERLESMEUNITESI.KURUMKAYITNO, Enums.AutocompleteFuction.KurumGetir, Enums.AutoCompleteType.List, Dil.Kurum)
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.KURUMKAYITNO)
            </div>
            <div class="col-md-4">
                @Html.AutoComplete(t => t.ENTHABERLESMEUNITESI.MARKA, Enums.AutocompleteFuction.ModemMarkaGetir, Enums.AutoCompleteType.List, Dil.HaberlesmeUnitesiMarkalari, connectedWith: Html.NameFor(t => t.ENTHABERLESMEUNITESI.MODEL).ToString())
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.MARKA)

            </div>
            <div class="col-md-4">
                @Html.AutoComplete(t => t.ENTHABERLESMEUNITESI.MODEL, Enums.AutocompleteFuction.ModemModelGetir, Enums.AutoCompleteType.List, Dil.HaberlesmeUnitesiModeli)
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.MODEL)
            </div>



        </div>

        <div class="form-group row">
            <div class="col-md-4">
                @Html.TextBoxFor(t => t.ENTHABERLESMEUNITESI.SERINO, new { @class = "form-control int", placeholder =Dil.HaberlesmeUnitesiSeriNo })
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.SERINO)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(t => t.ENTHABERLESMEUNITESI.SIMTELNO, new { @class = "form-control int", placeholder = Dil.SimTelNo })
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.SIMTELNO)
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(t => t.ENTHABERLESMEUNITESI.IP, new { @class = "form-control", placeholder = Dil.Ip })
                @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.IP)

            </div>

        </div>

        <div class="form-group">
            @Html.TextAreaFor(t => t.ENTHABERLESMEUNITESI.ACIKLAMA, new { @class = "form-control int", placeholder = Dil.Aciklama })
            @Html.ValidationMessageFor(t => t.ENTHABERLESMEUNITESI.ACIKLAMA)

        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> @Dil.Kaydet</button>
            @Html.ButtonLink(Dil.Vazgec, "Index", "btn btn-xs btn-danger cancel", "fa-remove")
        </div>
    }
</div>

