
@{
    ViewBag.Title = "Su";
}
<table id="tblTarifeSulistesi" class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Kayıt No</th>
            <th>Tarife Adı</th>
            <th>Açıklama</th>
            <th style="width: 100px">İşlemler</th>
        </tr>
    </thead>
</table>

<script type="text/javascript">
    $(document).ready(function () {


        AraFiltered();
             $("#btnAra").click(function (e) {

                    e.preventDefault();
                    AraFiltered();

            });

        function AraFiltered() {


            $('#tblTarifeSulistesi').dataTable({
                'language': dataTableLanguage,
                'processing': true,
                'serverSide': true,
                'destroy': true,
                'columns': [
                    { 'data': "KAYITNO" },
                    { 'data': "AD" },
                    { 'data': "ACIKLAMA" },
                    { 'data': "Islemler", sortable: false }
                ],
                'ajax': {
                    'type': 'POST',
                    'data': $("#frmAra").serializeObject(),
                    'url': "@Url.Action("DataTablesList", "Tarife")",
                    'error': function (xhr, ajaxOptions, errorThrown) { ajaxMesajGoster(xhr.responseJSON.Mesaj); },
                    'complete': function () { }
                }

            });

        }

    });


</script>
